<%= simple_form_for fabric do |f| %>
	<%= f.input :name, require: true %>
	<%= f.input :colour %>
	<%= f.input :width, require: true, hint: "in meter" %>
	<%= f.input :gramatura, require: true, hint: "in g/m" %>
	<%= f.input :fabric_type %>
	<%= f.input :composition %>
	<%= f.input :price, hint: "cts / m", require: true %>
	<%= f.input :shipment_time, default: 1, hint: "in days" %>
	<%= f.input :minimum_qty, hint: "in meter", value: 1 %>
	<%= f.input :photos, as: :file, input_html: { multiple: true } %>
	<%= f.submit class: "btn btn-success" %>
<% end %>