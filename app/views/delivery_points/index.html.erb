<div class="container" id="delivery-part">
	
	<div class="d-flex align-items-center">
		<h2>Escolhe o endereço de entrega ou</h2>
		<button class="btn btn-secondary mx-4 delivery-point-form">crie um novo endereço</button>
	</div>

	<div class="hidden" id="delivery-point-form">
		<%= render partial: "delivery_points/delivery_point_form", locals: {delivery_point: @delivery_point} %>
	</div>
	
	<%= render partial: "delivery_points/delivery_points_grid" %>
	
	<div class="d-flex mb-4">
		<%= simple_form_for :delivery_point, url: {controller: :fabric_to_carts, action: :set_delivery_point} do |f| %>
			<%= f.hidden_field :id, id: "delivery-point-id", value: @default_delivery_point, require: true %>
			<% if @error_message %>
				<p class="alert alert-danger"><%= @error_message %></p>
			<% end %>
			<%= f.submit "Selecionar endereço", class: "btn btn-success" %>
		<% end %>
	</div>

</div>