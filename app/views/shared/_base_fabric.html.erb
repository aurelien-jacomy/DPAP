<div class="card mx-2 p-1" id="fabric">
    <% unless fabric.photos[0].nil?%>
    <%=  cl_image_tag fabric.photos[0].key, :transformation=>[{:width=>400, :height=>250, :crop=>"fill"}] %>
    <% else %>
    <%= image_tag "textile_roll.png", size: "250x250" %>
    <% end %>
    <div class="card-body fabric">
        <h5 class="card-title"><%= fabric.name %></h5>
        <div class="content">
            <p class="card-text"><%= fabric.composition %></p>
            <p class="card-text">R$<%= fabric.price/100 %>/m</p>
            <p class="hidden" id="searchable-item"><%= fabric.colour %></p>
            <p class="hidden" id="searchable-item"><%= fabric.width %>/m</p>
            <p class="hidden" id="searchable-item"><%= fabric.gramatura %></p>
            <p class="hidden" id="searchable-item"><%= fabric.fabric_type %>/m</p>
            <p class="hidden" id="searchable-item"><%= fabric.shipment_time %></p>
            <p class="hidden" id="searchable-item"><%= fabric.minimum_qty %>/m</p>
            <p class="hidden" id="searchable-item"><%= fabric.composition %></p>
            <p class="hidden" id="searchable-item-price"><%= fabric.price %></p>
        </div>
            <div class="edit-links mx-2">
                <% if policy(fabric).edit? %>
                    <%= link_to edit_fabric_path(fabric) do %>
                        <i class="fas fa-edit green mr-2"></i>
                    <% end %>
                <% end %>
                    <%= link_to  "Ver detalhes", fabric_path(fabric), class: "btn btn-outline-primary center btn-details" %>
                <% if policy(fabric).destroy? %>
                    <%= link_to fabric, method: :delete, data: {confirm: "Tem certeza que quer retirar esse produto da venda?"} do %>
                        <i class="fas fa-trash red ml-2"></i>
                    <% end %>
                <% end %>
            </div>
        
    </div>
</div>