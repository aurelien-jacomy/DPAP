<%= render "./shared/company_banner", company: @company %>

<div class="container mt-4">
    <% if policy(Fabric).new? %>
    <%= link_to "Addicionar um novo produto", new_fabric_path, class: "btn btn-success btn-lg"  %>
    <% end %>

    <h2>Os produtos oferecidos pela sua empresa:</h2>
    <div class="cards d-flex mt-5 justify-content-between text-center">
        <% @fabrics.each do |fabric| %>

            <div>
                <%= render "./shared/base_fabric", fabric: fabric %>
                <% if policy(fabric).edit? %>
                    <div class="edit-links mx-2">
                        <%= link_to edit_fabric_path(fabric) do %>
                            <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to fabric, method: :delete, data: {confirm: "Tem certeza que quer retirar esse produto da venda?"} do %>
                            <i class="fas fa-trash"></i>
                        <% end %>
                    </div>    
                <% end %>

            </div>
        <% end %>
    </div>
</div>